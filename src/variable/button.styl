$type-hash['btn-default'] = {
    'default': {
        'bg': #FFF,
        'border': $gray-light,
        'color': $gray-darker,
        'shadow': none
    },
    'hover': {
        'bg': darken(#FFF, 5%),
        'border': darken($gray-light, 5%),
        'color': $gray-darker,
        'shadow': none
    },
    'active': {
        'bg': darken(#FFF, 10%),
        'border': darken($gray-light, 10%),
        'color': $gray-darker,
        'shadow': inset 0 3px 5px rgba(0,0,0,.125)
    },
    'disabled': {
        'bg': #DDD,
        'border': #BBB,
        'color': $text-color,
        'shadow': none
    },
};

