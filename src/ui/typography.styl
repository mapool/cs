@import "../variable/typography.styl"


body

    background-color $bg-color
    color $text-color
    font-size $size-base['font-size'];
    font-family $font-family-title;
    line-height $size-base['line-height']

a
    color $link-color
    text-decoration none

    if $support-mouse
        &:hover
            color $link-color-hover
