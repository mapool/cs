image()

    line-height 0
    text-align center
    overflow hidden

    a&,
    b&,
    i&,
    em&,
    span&,
    label&,
    strong&
        display inline-block

    ui()

    > img
        display block
        width 100%
        height 100%

    a&
        position relative

        &:after
            content ' '
            position absolute
            top 0
            right 0
            bottom 0
            left 0

        {$selector-hover}
            &:after
                background-color $image-link-hover-mask