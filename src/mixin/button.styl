button-type($bg, $color, $border,
            $bg-disabled, $color-disabled, $border-disabled) {

    background-color: $bg;
    border: 1px solid $border;
    color: $color;
    cursor: pointer;
    display: inline-block;
    border-radius: $btn-border-radius-base;

    &:disabled,
    &[disabled] {
        if ($bg != $bg-disabled) {
            background-color: $bg-disabled;
        }
        if ($color != $color-disabled) {
            color: $color-disabled;
        }
        if ($border != $border-disabled) {
            border-color: $border-disabled;
        }
    }
}



btn-default() {
    button-type(
        $btn-default-bg,
        $btn-default-color,
        $btn-default-border,

        $btn-default-bg-disabled,
        $btn-default-color-disabled,
        $btn-default-border-disabled
    );
}
