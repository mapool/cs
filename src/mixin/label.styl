label() {
    border: 1px solid transparent;
    display: inline-block;
    border-radius: $label-border-radius-base;
}

label-type($bg, $color, $border) {
    background-color: $bg;
    border-color: $border;
    color: $color;
}

label-default() {
    label-type(
        $label-default-bg,
        $label-default-color,
        $label-default-border
    );
}
label-primary() {
    label-type(
        $label-primary-bg,
        $label-primary-color,
        $label-primary-border
    );
}
label-info() {
    label-type(
        $label-info-bg,
        $label-info-color,
        $label-info-border
    );
}
label-success() {
    label-type(
        $label-success-bg,
        $label-success-color,
        $label-success-border
    );
}
label-error() {
    label-type(
        $label-error-bg,
        $label-error-color,
        $label-error-border
    );
}
