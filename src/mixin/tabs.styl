tabs()
    display block
    font-size 0
    line-height 0
    user-select none
    ui()

tabs-item(checked-selector = '')

    display inline-block
    position relative
    ui()

    if $support-mouse
        cursor $cursor-clickable

        if checked-selector
            &{checked-selector}
                cursor $cursor-checked



