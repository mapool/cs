@import '../variable/pagination.styl'
@import '../mixin/pagination.styl'

+prefix-classes($ui-prefix)

    {$selector-pagination}

        pagination()

        selector-item = '> ' + $selector-pagination-item
        selector-button = '> ' + $selector-pagination-button

        ui-size-variant(
            selector-child: selector-item,
            each: @(size) {
                ui-set('font-size', size['font'])
                ui-set('margin-left', size['margin-horizontal'])
                &:first-child {
                    margin-left 0
                }
            }
        )

        ui-size-variant(
            selector-child: selector-button,
            each: @(size) {
                ui-set('line-height', size['line-height'])
                ui-set('padding', size['padding-vertical'] size['padding-horizontal'])
            }
        )

        ui-brand-variant(
            reversed: true,
            selector-child: selector-button,
            each: @(bg, border, color) {
                ui-hover(bg, border, color)
                ui-active(bg, border, color)
                ui-checked(bg, border, color)
            }
        )

        ui-brand-variant(
            reversed: true,
            selector-child: selector-button,
            selector-grandchild: $selector-active,
            each: @(bg, border, color) {
                ui-style(bg, border, color)
            }
        )

        {selector-item}
            pagination-item()

        {selector-button}
            pagination-button()

