button() {

    display: inline-block;
    text-align: center;
    user-select: none;
    vertical-align: baseline;

    if ($support-mouse == true) {
        cursor: pointer;
    }

    ui-base();

}

button-reset() {
    outline: none;
    margin: 0; // safari 需要这句
}

button-link($color, $color-hover) {

    color: $color;

    if ($support-mouse == true) {
        &:hover {
            color: $color-hover;
            text-decoration: underline;
        }
    }
}

button-block() {
    display: block;
    width: 100%;
}
