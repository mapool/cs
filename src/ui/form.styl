input[type="search"] {
    appearance: textfield;
}


.form-label,
.form-static,
.form-radio,
.form-checkbox,
.form-inline,
.form-block {
    ui-size('form');
}

.form-group {
    clearfix();

    & + & {
        margin-top: $form-group-gap;
    }
}

.form-label {
    float: left;
    margin-right: $form-label-gap;
    form-label();
}

.form-controls {
    overflow: hidden;
}

.form-radio,
.form-checkbox {
    form-box();

    & + & {
        margin-left: 10px;
    }
}


.form-text {

    form-text();
    ui-size('form-text', true, true);

    div&,
    span& {

        display: inline-block;

        input,
        textarea {
            border: none;
        }
    }

}

.form-inline {
    display: inline-block;
}
.form-block {
    display: block;
}
