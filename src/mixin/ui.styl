

ui()

    if @display == 'inline-block' or @display == 'inline'
        vertical-align baseline

    a&
        text-decoration none

    input&,
    button&
        outline 0
        border 0
        margin 0
        background-color transparent


ui-fluid()

    display block
    width 100%


ui-link(color, has-hover)

    color color
    text-decoration none

    if $support-mouse and has-hover
        {$selector-hover}
            color darken(color, 10%)
            text-decoration underline


ui-style(bg = null, border = null, color = null)

    if bg is a 'rgba'
        background-color bg

    if border is a 'rgba'
        border 1px solid border

    if color is a 'rgba'
        color color


ui-hover(bg = null, border = null, color = null)

    {$selector-hover}

        ui-style(
            border: darken(border, 6%),
            color: darken(color, 5%),
            bg: darken(bg, 6%)
        )

ui-active(bg = null, border = null, color = null)

    {$selector-active}

        ui-style(
            border: darken(border, 14%),
            color: darken(color, 5%),
            bg: darken(bg, 14%)
        )

ui-checked(bg = null, border = null, color = null)

    {$selector-checked}

        cursor $cursor-checked

        ui-style(
            border: darken(border, 14%),
            color: darken(color, 5%),
            bg: darken(bg, 14%)
        )

ui-disabled(bg = null, border = null, color = null)

    {$selector-disabled}

        cursor $cursor-disabled

        border = lighten(border, 30%)
        color = lighten(color, 60%)
        bg = lighten(bg, 35%)

        ui-style(
            border: border,
            color: color,
            bg: bg
        )

        if $support-mouse

            {$selector-hover},
            {$selector-active}
                ui-style(
                    border: border,
                    color: color,
                    bg: bg
                )



ui-brand(brand,
    level = 'base',
    reversed = false,
    has-border = false,
    has-color = false,
    has-bg = false,
    has-hover = false,
    has-active = false,
    has-checked = false,
    has-disabled = false)

    color = brand[level]
    bg = brand[level + '-reversed']

    if reversed
        color = brand[level + '-reversed']
        bg = brand[level]

    border = darken(bg, 20%)

    ui-style(
        border: has-border ? border : null,
        color: has-color ? color : null,
        bg: has-bg ? bg : null,
    )

    if has-hover
        ui-hover(
            border: border,
            color: color,
            bg: bg
        )

    if has-active
        ui-active(
            border: border,
            color: color,
            bg: bg
        )

    if has-checked
        ui-checked(
            border: border,
            color: color,
            bg: bg
        )

    if has-disabled
        ui-disabled(
            border: border,
            color: color,
            bg: bg
        )


ui-brand-variant(level = 'base',
    selector-append = '',
    selector-child = '',
    reversed = false,
    has-border = false,
    has-color = false,
    has-bg = false,
    has-hover = false,
    has-active = false,
    has-checked = false,
    has-disabled = false)

    for brand in $brand-hash

        apply()
            ui-brand(
                brand: $brand-hash[brand],
                level: level,
                reversed: reversed,
                has-border: has-border,
                has-color: has-color,
                has-bg: has-bg,
                has-hover: has-hover,
                has-active: has-active,
                has-checked: has-checked,
                has-disabled: has-disabled
            )

        selector = '&'

        if brand
            selector += '.' + brand

        if selector-append
            selector += selector-append;

        {selector}

            if selector-child
                {selector-child}
                    apply()
            else
                apply()


ui-size(size,
    has-border = false,
    has-font = false,
    has-line-height = false,
    has-width = false,
    has-height = false,
    has-margin-vertical = false,
    has-margin-horizontal = false,
    has-padding = false,

    has-round = false,
    has-left-round = false,
    has-right-round = false,

    has-radius = false,
    has-left-radius = false,
    has-right-radius = false)

    if has-font
        font-size size['font-size']

    if has-line-height
        line-height size['line-height']

    if has-width
        width size['width']

    if has-height
        height size['height']

    if has-margin-horizontal
        margin-left size['margin-horizontal'];
        &:first-child
            margin-left 0


    if has-margin-vertical
        margin-top size['margin-vertical'];
        &:first-child
            margin-top 0

    if has-padding
        padding: size['padding-vertical'] size['padding-horizontal']

    if has-round
        border-radius size['round-size']

    if has-left-round
        border-top-left-radius size['round-size'];
        border-bottom-left-radius size['round-size'];

    if has-right-round
        border-top-right-radius size['round-size'];
        border-bottom-right-radius size['round-size'];

    if has-radius
        border-radius size['radius-size']

    if has-left-radius
        border-top-left-radius size['radius-size'];
        border-bottom-left-radius size['radius-size'];

    if has-right-radius
        border-top-right-radius size['radius-size'];
        border-bottom-right-radius size['radius-size'];


ui-size-variant(size-hash = $size-hash,
    selector-append = '',
    selector-child = '',
    has-font = false,
    has-line-height = false,
    has-width = false,
    has-height = false,
    has-margin-vertical = false,
    has-margin-horizontal = false,
    has-padding = false,
    has-border = false,

    has-round = false,
    has-left-round = false,
    has-right-round = false,

    has-radius = false,
    has-left-radius = false,
    has-right-radius = false)



    for size in size-hash

        apply()
            ui-size(
                size: size-hash[size],
                has-font: has-font,
                has-line-height: has-line-height,
                has-width: has-width,
                has-height: has-height,
                has-margin-vertical: has-margin-vertical,
                has-margin-horizontal: has-margin-horizontal,
                has-padding: has-padding,
                has-border: has-border,
                has-round: has-round,
                has-left-round: has-left-round,
                has-right-round: has-right-round,
                has-radius: has-radius,
                has-left-radius: has-left-radius,
                has-right-radius: has-right-radius
            )

        selector = '&'

        if size
            selector += '.' + size

        if selector-append
            selector += selector-append;

        {selector}

            if selector-child
                {selector-child}
                    apply()
            else
                apply()



