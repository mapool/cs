button() {

    border: 1px solid transparent;
    display: inline-block;
    text-align: center;

    if ($btn-font-weight != 'normal') {
        font-weight: $btn-font-weight;
    }

    if ($support-mouse == true) {
        cursor: pointer;
        user-select: none;
    }

    &:disabled,
    &[disabled] {

        if ($support-mouse == true) {
            cursor: not-allowed;
        }

    }

    button& {
        outline: none;
        // safari 需要写这句
        margin: 0;
    }

    ui-size('btn');

}

button-default() {
    ui-type(
        $btn-default-bg,
        $btn-default-color,
        $btn-default-border,
        $btn-default-shadow,

