badge() {

    display: inline-block;

    if ($badge-font-weight != 'normal') {
        font-weight: $badge-font-weight;
    }

    ui-size('badge');
}

badge-default() {
    ui-type(
        $badge-default-bg,
        $badge-default-color
    );
}
badge-primary() {
    ui-type(
        $badge-primary-bg,
        $badge-primary-color
    );
}
badge-info() {
    ui-type(
        $badge-info-bg,
        $badge-info-color
    );
}
badge-success() {
    ui-type(
        $badge-success-bg,
        $badge-success-color
    );
}
badge-error() {
    ui-type(
        $badge-error-bg,
        $badge-error-color
    );
}
