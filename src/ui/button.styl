@import "../mixin/button.styl"


.{$ui-prefix}btn

    input&,
    button&
        button-reset()

    button()

    ui-base(has-border: true)


    &.tiny
        ui-tiny(has-border: true)

    &.small
        ui-small(has-border: true)

    &.large
        ui-large(has-border: true)

    &.huge
        ui-huge(has-border: true)

    for type in $brand-hash
        &.{type}
            ui-brand-variant(brand: $brand-hash[type], has-bg: true, has-border: true)

    &.round
        ui-round-variant()

    &.radius
        ui-radius-variant()

    &.link
        button-link($link-color, $link-color-hover)

    &.block
        button-block()

