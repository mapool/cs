/**
 * @file Tabs
 * @author musicode
 */


tab-size(size)

    ui-set('font-size', size['font'])
    ui-set('line-height', size['line-height'])
    ui-set('padding', size['padding-vertical'] size['padding-horizontal'])


tab-brand(bg, border, color)

    ui-hover(bg, border, color)
    ui-active(bg, border, color)
    ui-checked(bg, border, color)


ui-tab()

    display inline-block
    position relative
    text-align center
    white-space nowrap

    ui()

    if $support-mouse
        ui-set('cursor', $cursor-clickable)


ui-tabs()

    color inherit
    user-select none

    ui()
    ui-fluid()

    ui-collection(
        selector-item: $selector-tab,
        each: @(size) {
            > {$selector-tab} {
                tab-size(size)
            }
        }
    )

    ui-brand-variant(
        reversed: true,
        each: @(bg, border, color) {
            > {$selector-tab} {
                tab-brand(bg, border, color)
            }
        }
    )