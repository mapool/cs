+prefix-classes($ui-prefix)

    // font-size 需要被 $selector-links 覆盖
    // 因此先定义
    ui-size-variant(
        each: @(size) {
            ui-set('font-size', size['font'])
            ui-set('line-height', size['line-height'])
        }
    )

    a
        link-brand()
        &:hover
            link-hover()

    {$selector-link}
        ui-link()

    {$selector-links}
        ui-links()

        &{$selector-tight}
            ui-collection-tight(
                selector-item: $selector-link
            )

        &{$selector-justified}
            ui-justified(
                selector-item: $selector-link
            )

    // color 不需要被 $selector-link 覆盖
    // 因此后定义
    ui-brand-variant(
        each: @(color, name) {
            ui-set('color', color)
            &{$selector-link} {
                {$selector-hover} {
                    ui-set('color', $brand-hover-hash[name])
                }
            }
        }
    )


