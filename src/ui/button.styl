@import "../mixin/button.styl"


.{$ui-prefix}button

    input&,
    button&
        button-reset()

    button()

    ui-brand-variant(
        has-border: true,
        has-bg: true
    )

    ui-size-variant(
        has-border: true,
        has-font: true,
        has-line-height: true,
        has-padding: true
    )

    &.round
        ui-size-variant(has-round: true)

    &.radius
        ui-size-variant(has-radius: true)

    &.fluid
        ui-fluid()

    &.link
        button-link($link-color, $link-color-hover)

