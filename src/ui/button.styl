@import '../variable/button.styl'
@import '../mixin/button.styl'

+prefix-classes($ui-prefix)

    {$selector-button}
        ui-button()

    {$selector-buttons}
        ui-buttons()

        &{$selector-tight}
            ui-buttons-tight()

        &{$selector-justified}
            ui-justified(
                selector-item: $selector-button
            )


