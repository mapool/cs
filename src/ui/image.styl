@import '../variable/image.styl'
@import '../mixin/image.styl'

+prefix-classes($ui-prefix)

    {$selector-image}

        image()

        ui-size-variant(
            size-hash: $image-size-hash,
            each: @(size) {
                ui-set('width', size['width'])
                ui-set('height', size['height'])
            }
        )

        {$selector-image-link}&
            image-link()

        {$selector-round}
            border-radius 50%

        {$selector-radius}
            ui-size-variant(
                size-hash: $image-size-hash,
                each: @(size) {
                    ui-set('border-radius', size['radius'])
                }
            )

