@import "../variable/tabs.styl"
@import "../mixin/tabs.styl"

+prefix-classes($ui-prefix)

    .tabs

        tabs()

        selector-item = ' > .item';

        ui-brand-variant(
            reversed: true,
            has-hover: true,
            has-active: true,
            selector-append: selector-item
        )

        ui-brand-variant(
            reversed: true,
            has-bg: true,
            has-checked: true,
            selector-append: selector-item,
            selector-child: $selector-checked
        )

        ui-size-variant(
            has-font: true,
            has-line-height: true,
            has-padding: true,
            selector-append: selector-item
        )

        &.justified
            ui-justified(
                selector-item: selector-item
            )

        {selector-item}
            tabs-item()
