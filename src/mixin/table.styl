/**
 * @file Table
 * @author musicode
 */


table()

    ui-fluid()

    ui()

    thead
        background-color $table-head-bg

    th
        color $table-head-color
        font-weight normal
        text-align $table-head-align
        padding $table-head-cell-padding-vertical $table-head-cell-padding-horizontal

    tbody
        background-color $table-body-bg

    td
        color $table-body-color
        text-align $table-body-align
        padding $table-body-cell-padding-vertical $table-body-cell-padding-horizontal


table-striped()

    tbody tr:nth-child(even)
        background-color $table-body-even-row-bg


table-cell-bordered()

    thead th
        border 1px solid $table-head-border

    tbody td
        border 1px solid $table-body-border


table-row-bordered()

    thead tr
        border-bottom: 1px solid $table-head-border;

    tbody tr
        border-top: 1px solid $table-body-border

        &:first-child
            border-top 0


table-col-bordered()

    thead th
        border-left 1px solid $table-head-border

        &:first-child
            border-left 0

    tbody td
        border-left 1px solid $table-body-border

        &:first-child
            border-left 0

