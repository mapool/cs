body {
    background-color: $bg-color;
    color: $text-color;
    font-size: $font-size-base;
    line-height: $line-height-base;
}

a {
    color: $link-color;
    text-decoration: none;

    &:hover {
        color: $link-color-hover;
        text-decoration: underline;
    }
}

small {
    font-size: $font-size-tiny;
}