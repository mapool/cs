ui-tooltip()

    position absolute
    display none
    border 1px solid transparent
    word-wrap break-word

    ui-set('border-radius', $tooltip-radius-size)
    ui-set('font-size', $tooltip-font-size)
    ui-set('padding', $tooltip-padding-vertical $tooltip-padding-horizontal)
    ui-set('box-shadow', $tooltip-box-shadow)
    ui()

    &:before,
    &:after
        position absolute
        content ' '
        border 0 solid transparent

    ui-brand-variant(
        reversed: true,
        each: @(bg, color) {

            border = darken(bg, $tooltip-border-darken)

            ui-set('background-color', bg)
            ui-set('border-color', border)
            ui-set('color', color)

            &:before {
                ui-set('border-color', border)
            }
            &:after {
                ui-set('border-color', bg)
            }

        }
    )


ui-tooltip-top()

    &:before,
    &:after
        left 50%
        margin-left -1 * $tooltip-arrow-size

        border-width $tooltip-arrow-size $tooltip-arrow-size 0 $tooltip-arrow-size
        border-left-color transparent
        border-right-color transparent

    &:before
        bottom -1 * $tooltip-arrow-size

    &:after
        bottom -1 * $tooltip-arrow-size + 1


ui-tooltip-right()

    &:before,
    &:after
        top 50%
        margin-top -1 * $tooltip-arrow-size

        border-width $tooltip-arrow-size $tooltip-arrow-size $tooltip-arrow-size 0
        border-top-color transparent
        border-bottom-color transparent

    &:before
        left -1 * $tooltip-arrow-size

    &:after
        left -1 * $tooltip-arrow-size + 1


ui-tooltip-bottom()

    &:before,
    &:after
        left 50%
        margin-left -1 * $tooltip-arrow-size

        border-width 0 $tooltip-arrow-size $tooltip-arrow-size $tooltip-arrow-size
        border-left-color transparent
        border-right-color transparent

    &:before
        top -1 * $tooltip-arrow-size

    &:after
        top -1 * $tooltip-arrow-size + 1


ui-tooltip-left()

    &:before,
    &:after
        top 50%
        margin-top -1 * $tooltip-arrow-size

        border-width $tooltip-arrow-size 0 $tooltip-arrow-size $tooltip-arrow-size
        border-top-color transparent
        border-bottom-color transparent

    &:before
        right -1 * $tooltip-arrow-size

    &:after
        right -1 * $tooltip-arrow-size + 1

