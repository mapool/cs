thumbnail() {

    display: inline-block;

    if (typeof($thumbnail-bg) == 'rgba') {
        background-color: $thumbnail-bg;
    }

    if (typeof($thumbnail-border) == 'rgba') {
        border: 1px solid $thumbnail-border;
    }

    if ($thumbnail-shadow) {
        box-shadow: $thumbnail-shadow;
    }

    img {
        width: 100%;
        height: 100%;
    }

    ui-size('thumbnail');

}



