    primary: {
        bg: $brand-primary,
        color: #FFF
    },
    success: {
        bg: $brand-success,
        color: #FFF
    },
    error: {
        bg: $brand-error,
        color: #FFF
    },
    info: {
        bg: $brand-info,
        color: #FFF
    },
    warning: {
        bg: $brand-warning,
        color: #FFF
    },
    danger: {
        bg: $brand-danger,
        color: #FFF
    }
