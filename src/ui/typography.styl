@import '../variable/typography.styl'

+prefix-classes($ui-prefix)

    html
        box-sizing border-box

    *,
    *:before,
    *:after
        box-sizing inherit

    input[type="text"],
    input[type="email"],
    input[type="search"],
    input[type="password"]
        appearance none

    input[type="radio"],
    input[type="checkbox"]
        width 14px
        height 14px

    // 隐藏 IE 10+ 输入框后面的 x
    input::-ms-clear
        display none



    body
        ui-set('background-color', $bg-color)
        ui-set('color', $text-color)
        ui-set('font-family', $font-family-title)
        ui-set('font-size', $size-base['font'])
        ui-set('line-height', $size-base['line-height'])

    .link
        ui-link(
            color: $link-color,
            has-hover: true
        )
