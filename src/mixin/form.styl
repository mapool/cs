/**
 * @file 表单元素
 * @author zhujl
 */

form-group() {

    clearfix();

    position: relative;

    if (typeof($form-group-border) == 'rgba') {
        border-bottom: 1px solid $form-group-border;
    }

    if ($form-group-gap > 0) {
        padding-top: 0.5 * $form-group-gap;
        padding-bottom: 0.5 * $form-group-gap;
    }

}

form-action() {
    margin-top: $form-action-gap;
}

// 域标签
form-label() {
    float: left;
    font-weight: $form-label-font-weight;
    padding-right: $form-label-gap;
    text-align: right;
}

form-controls() {

}

input-group() {

    display: inline-block;

}

input-group-addon() {

    display: inline-block;
    vertical-align: top;

    if (typeof($input-group-addon-border) == 'rgba') {
        border: 1px solid;
    }

    ui-type(
        $input-group-addon-bg,
        $input-group-addon-color,
        $input-group-addon-border
    );

    ui-size('input-group-addon');

    &:first-child {
        border-right: none;
        border-top-right-radius: 0;
        border-bottom-right-radius: 0;
    }

}

// 文本输入框
form-text() {

    background-color: $form-text-bg;
    border: 1px solid $form-text-border;
    color: $form-text-color;
    outline: none;
    margin: 0;

    if ($form-text-border-radius > 0) {
        border-radius: $form-text-border-radius;
    }

    textarea& {
        resize: vertical;
    }

    &:hover {

        if ($form-text-bg-hover is a 'rgba' && $form-text-bg-hover != $form-text-bg) {
            background-color: $form-text-bg-hover;
        }

        if ($form-text-border-hover is a 'rgba' && $form-text-border-hover != $form-text-border) {
            border-color: $form-text-border-hover;
        }

        if ($form-text-color-hover is a 'rgba' && $form-text-color-hover != $form-text-color) {
            color: $form-text-color-hover;
        }
    }

    &:focus {

        if ($form-text-bg-focus is a 'rgba' && $form-text-bg-focus != $form-text-bg) {
            background-color: $form-text-bg-focus;
        }

        if ($form-text-border-focus is a 'rgba' && $form-text-border-focus != $form-text-border) {
            border-color: $form-text-border-focus;
        }

        if ($form-text-color-focus is a 'rgba' && $form-text-color-focus != $form-text-color) {
            color: $form-text-color-focus;
        }
    }

    &:disabled {

        cursor: not-allowed;

        // 禁用具有最高优先级，所以不能像前面那样 if
        // 否则无法覆盖样式
        background-color: $form-text-bg-disabled;
        border-color: $form-text-border-disabled;
        color: $form-text-color-disabled;

    }

    // 不能合并写
    &::-webkit-input-placeholder { /* WebKit browsers */
        color: $form-text-color-placeholder;
    }
    &:-moz-placeholder { /* Mozilla Firefox 4 to 18 */
        color: $form-text-color-placeholder;
    }
    &::-moz-placeholder { /* Mozilla Firefox 19+ */
        color: $form-text-color-placeholder;
    }
    &:-ms-input-placeholder { /* Internet Explorer 10+ */
        color: $form-text-color-placeholder;
    }
}

// 模拟 Placeholder
form-placeholder-wrapper() {
    display: inline-block;
    position: relative;
}

form-placeholder() {
    color: $form-text-color-placeholder;
    position: absolute;
    left: 0;
    top: 0;
}

form-number() {
    position: relative;
}

// 单选复选框
form-box() {

    display: inline-block;
    user-select: none;
    cursor: pointer;

    input {
        cursor: pointer;
        margin: 0 $form-box-inner-gap 0 1px;
    }

    & + & {
        margin-left: $form-box-gap;
    }

}

form-inline() {

    display: inline-block;

    if ($form-inline-gap > 0) {
        margin-left: $form-inline-gap;
    }

    &:empty {
        display: none;
    }
}
form-block() {
    display: block;
}
