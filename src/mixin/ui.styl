

ui()

    box-sizing border-box

    if @display == 'inline-block' or @display == 'inline'
        vertical-align baseline


ui-fluid()

    display block
    width 100%

ui-brand(brand, color-level, has-border, has-bg)

    color = brand[color-level + '-reversed']
    bg = brand[color-level]

    if color-level == 'lighter'
        border = brand['light']
    else if color-level == 'light'
        border = brand['base']
    else if color-level == 'base'
        border = brand['dark']
    else if color-level == 'dark'
        border = brand['darker']

    if !has-bg
        color = bg
        bg = null

    if !has-border
        border = null

    if color is a 'rgba'
        color color

    if border is a 'rgba'
        border 1px solid border

    if bg is a 'rgba'
        background-color bg



ui-brand-variant(append = '', color-level = 'base', has-border = false, has-bg = false)

    for brand in $brand-hash

        selector = ''

        if brand
            selector = '.' + brand

        if append
           selector = selector + append

        if selector
            &{selector}
                ui-brand($brand-hash[brand], color-level, has-border, has-bg)
        else
            ui-brand($brand-hash[brand], color-level, has-border, has-bg)




ui-size(size, is-item, has-font, has-line-height, has-margin-horizontal, has-padding, has-border, has-round, has-radius)

    if has-font
        font-size size['font-size']

    if has-line-height
        line-height size['line-height']

    if has-margin-horizontal
        margin-left size['margin-horizontal']

    if has-margin-horizontal and is-item
        &:first-child
            margin-left 0

    if has-padding
        padding: size['padding-vertical'] size['padding-horizontal']

    if has-round
        border-radius size['round-size']
    else if has-radius
        border-radius size['radius-size']



ui-size-variant(append = '', is-item = false, has-font = false, has-line-height = false, has-margin-horizontal = false, has-padding = false, has-border = false, has-round = false, has-radius = false)

    for size in $size-hash

        selector = ''

        if size
            selector = '.' + size

        if append
           selector = selector + append

        if selector
            &{selector}
                ui-size($size-hash[size], is-item, has-font, has-line-height, has-margin-horizontal, has-padding, has-border, has-round, has-radius)
        else
            ui-size($size-hash[size], is-item, has-font, has-line-height, has-margin-horizontal, has-padding, has-border, has-round, has-radius)



