 * @author musicode
 */

@import "../mixin/button.styl"

+prefix-classes($ui-prefix)

    .button

        button()

        ui-brand-variant(
            has-border: true,
            has-color: true,
            has-bg: true,
            has-hover: true,
            has-active: true,
            has-disabled: true
        )

        ui-size-variant(
            has-border: true,
            has-font: true,
            has-line-height: true,
            has-padding: true
        )

        ui-clickable(
            has-disabled: true
        )

        &.link
            ui-link(
                color: $link-color,
                has-hover: true
            )

        &.round
            ui-size-variant(
                has-round: true
            )

        &.radius
            ui-size-variant(
                has-radius: true
            )

        &.fluid
            ui-fluid()

    .buttons
        buttons()

        > .button

            margin-left -1px

            {$selector-first-child}
                margin-left 0

            {$selector-hover}
                position relative
                z-index 1

            &.round,
            &.radius
                border-radius 0

            ui-size-variant(
                has-left-round: true,
                append-selector: '.round',
                child-selector: $selector-first-child
            )

            ui-size-variant(
                has-right-round: true,
                append-selector: '.round',
                child-selector: $selector-last-child
            )

            ui-size-variant(
                has-left-radius: true,
                append-selector: '.radius',
                child-selector: $selector-first-child
            )

            ui-size-variant(
                has-right-radius: true,
                append-selector: '.radius',
                child-selector: $selector-last-child
            )



