+prefix-classes($ui-prefix)

    {$selector-button}
        ui-button()

        &{$selector-outline}
            ui-button-outline()

    {$selector-buttons}
        ui-buttons()

        &{$selector-tight}
            ui-buttons-tight()

        &{$selector-justified}
            ui-justified(
                selector-item: $selector-button
            )


