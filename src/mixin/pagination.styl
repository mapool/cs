@import './list.styl'

pagination()

    font-size 0

    ui()

    ul&
        list-unstyled()


pagination-item()

    display inline-block

    ui()


pagination-button()

    border 1px solid $pagination-button-border
    user-select none

    ui()

    if $support-mouse
        ui-set('cursor', $cursor-clickable)

    ui-style(
        color: $pagination-button-color,
        bg: $pagination-button-bg
    )

    ui-disabled(
        border: $pagination-button-border,
        color: $pagination-button-color,
        bg: $pagination-button-bg
    )

    ui-brand-variant(
        reversed: true,
        selector-child: selector-button,
        each: @(bg, border, color) {
            ui-hover(bg, border, color)
            ui-active(bg, border, color)
            ui-checked(bg, border, color)
        }
    )



