$image-link-hover-mask = rgba(0,0,0,0.2)

$image-size-base = {
    width: 70px,
    height: 70px,
    round-size: 50%,
    radius-size: 6px
}

$image-size-tiny = {
    width: 30px,
    height: 30px,
    round-size: 50%,
    radius-size: 4px
}

$image-size-small = {
    width: 50px,
    height: 50px,
    round-size: 50%,
    radius-size: 4px
}

$image-size-large = {
    width: 100px,
    height: 100px,
    round-size: 50%,
    radius-size: 8px
}

$image-size-huge = {
    width: 140px,
    height: 140px,
    round-size: 50%,
    radius-size: 10px
}


$image-size-hash = {
    '': $image-size-base,
    tiny: $image-size-tiny,
    small: $image-size-small,
    large: $image-size-large,
    huge: $image-size-huge
}