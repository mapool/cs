@import '../src/cs.styl'

body
    background-color #F2F0EA
    padding 20px 40px

.row

    background-color #FFF
    padding 10px
    box-shadow 1px 1px 3px rgba(0,0,0,0.2)

.row + .row
    margin-top 20px

code
    border 1px solid #e0e0e0
    background-color #F8F8F8
    border-radius 2px
    display inline-block
    line-height 1
    padding 2px 6px

blockquote
    border-left 4px solid $brand-primary
    background-color #FFF
    padding 5px 20px
    box-shadow 1px 1px 3px rgba(0,0,0,0.2)


#sidebar,
#main
    position fixed
    top 0
    bottom 0

#sidebar
    background-color #E1E3D9
    border-right 1px solid #CCC
    left 0
    width 150px

    h1
        text-align center

    .link
        font-size 30px

    .button
        border 0
        text-align left
        padding-left 30px

        &:hover
            background-color #F2F0EA
            color #333

        &:active
            background-color #FFFDF5

#main

    left 150px
    right 0

    > iframe
        width 100%
        height 100%

h2,
h3,
h4,
h5
    border-left 4px solid $brand-primary
    padding 0 10px