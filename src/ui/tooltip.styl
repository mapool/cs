/**
 * @file Tooltip
 * @author musicode
 */

@import '../variable/tooltip.styl'
@import '../mixin/tooltip.styl'

+prefix-classes($ui-prefix)

    {$selector-tooltip}

        tooltip()

        ui-brand-variant(
            reversed: true,
            each: @(bg, border, color) {

                ui-style(
                    bg: bg,
                    color: color,
                    border: border
                )

                &:before {
                    ui-style(border: border)
                }
                &:after {
                    ui-style(border: bg)
                }

            }
        )

        &.top
            tooltip-top()

        &.right
            tooltip-right()

        &.bottom
            tooltip-bottom()

        &.left
            tooltip-left()

