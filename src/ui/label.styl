+prefix-classes($ui-prefix)

    {$selector-label}
        ui-label()

    {$selector-labels}
        ui-labels()

        &{$selector-tight}
            ui-labels-tight()

        &{$selector-justified}
            ui-justified(
                selector-item: $selector-label
            )