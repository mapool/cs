/**
 * @file Message
 * @author musicode
 */

message-size(size)

    ui-set('font-size', size['font'])
    ui-set('line-height', size['line-height'])
    ui-set('padding', size['padding-vertical'] size['padding-horizontal'])


message-brand(color)

    ui-set('background-color', lighten(color, 95%))
    ui-set('border-color', color)
    ui-set('color', color)


ui-message()

    border 1px solid transparent
    display inline-block
    text-align left

    ui()

    ui-brand-variant(
        each: message-brand
    )

    ui-size-variant(
        each: @(size) {
            message-size(size)

            &{$selector-round} {
                ui-set('border-radius', size['round'])
            }

            &{$selector-radius} {
                ui-set('border-radius', size['radius'])
            }
        }
    )


ui-messages()

    ui-collection(
        selector-item: $selector-message,
        each: @(size) {

            > {$selector-message} {
                message-size(size)
            }

            &{$selector-round} {
                > {$selector-message} {
                    ui-set('border-radius', size['round'])
                }
            }

            &{$selector-radius} {
                > {$selector-message} {
                    ui-set('border-radius', size['radius'])
                }
            }

        }
    )


ui-messages-tight()

    ui-collection-tight(
        selector-item: $selector-message,
        gap-item: -1px
    )

    ui-collection-tight-side-radius(
        selector-item: $selector-message
    )
