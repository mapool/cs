thumbnail() {

    display: inline-block;

    if (typeof($thumbnail-bg) == 'rgba') {
        background-color: $thumbnail-bg;
    }

    if (typeof($thumbnail-border) == 'rgba') {
        border: 1px solid $thumbnail-border;
    }

    if ($thumbnail-shadow) {
        box-shadow: $thumbnail-shadow;
    }

    img {
        width: 100%;
        height: 100%;
    }

}

thumbnail-rect() {
    ui-size('thumbnail-rect');
}

thumbnail-round() {

    ui-size('thumbnail-round');

    border-radius: $thumbnail-round;

    img {
        border-radius: $thumbnail-round-inner;
    }
}

thumbnail-circle() {

    ui-size('thumbnail-circle');

    border-radius: $thumbnail-circle;

    img {
        border-radius: $thumbnail-circle-inner;
    }
}


thumbnail-title() {
    color: $thumbnail-title-color;
    display: block;
    line-height: 1;
    margin-top: $thumbnail-title-gap;
    text-align: center;
}