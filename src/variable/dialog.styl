$selector-dialog = '.dialog'
$selector-dialog-header = '.header'
$selector-dialog-title = '.title'
$selector-dialog-close = '.close'
$selector-dialog-body = '.body'
$selector-dialog-footer = '.footer'
$selector-dialog-draggable = '.draggable'

$dialog-min-width = 360px

$dialog-radius = 2px
$dialog-padding-horizontal = 15px

$dialog-header-padding-vertical = 15px
$dialog-body-padding-vertical = 20px
$dialog-footer-padding-vertical = 15px

$dialog-title-font-size = 16px

$dialog-close-font-size = 26px
$dialog-close-top = 8px

$dialog-bg = $brand-bg
$dialog-border = $brand-border
$dialog-divider = $brand-divider
$dialog-box-shadow = $layer-box-shadow

$dialog-header-bg = #F9F9F9
$dialog-header-color = #222

$dialog-brand-hash = {
    primary: {
        bg: $brand-primary,
        color: #FFF
    },
    secondary: {
        bg: $brand-text,
        color: #FFF
    },
    success: {
        bg: $brand-success,
        color: #FFF
    },
    error: {
        bg: $brand-error,
        color: #FFF
    },
    info: {
        bg: $brand-info,
        color: #FFF
    },
    warning: {
        bg: $brand-warning,
        color: #FFF
    },
    danger: {
        bg: $brand-danger,
        color: #FFF
    },
    muted: {
        bg: $brand-muted,
        color: #FFF
    }
}


