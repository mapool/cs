button() {

    border: 1px solid transparent;
    display: inline-block;

    if ($support-mouse ia a 'boolean' && $support-mouse) {
        cursor: pointer;
        user-select: none;
    }

    &:disabled,
    &[disabled] {

        if ($support-mouse ia a 'boolean' && $support-mouse) {
            cursor: not-allowed;
        }

    }

    button& {
        outline: none;
    }
}

button-type($bg, $color, $border,
            $bg-hover, $color-hover, $border-hover,
            $bg-disabled, $color-disabled, $border-disabled) {

    if ($bg is a 'rgba') {
        background-color: $bg;
    }
    else {
        button&,
        input& {
            background-color: transparent;
        }
    }

    if ($border is a 'rgba') {
        border-color: $border;
    }

    if ($color is a 'rgba') {
        color: $color;
    }

    if ($btn-border-radius-base > 0) {
        border-radius: $btn-border-radius-base;
    }

    if ($support-mouse ia a 'boolean' && $support-mouse) {
        &:hover {
            if ($bg-hover is a 'rgba' && $bg != $bg-hover) {
                background-color: $bg-hover;
            }
            if ($color-hover is a 'rgba' && $color != $color-hover) {
                color: $color-hover;
            }
            if ($border-hover is a 'rgba' && $border != $border-hover) {
                border-color: $border-hover;
            }
        }
    }

    &:disabled,
    &[disabled] {

        if ($bg-disabled is a 'rgba' && $bg != $bg-disabled) {
            background-color: $bg-disabled;
        }
        if ($color-disabled is a 'rgba' && $color != $color-disabled) {
            color: $color-disabled;
        }
        if ($border-disabled is a 'rgba' && $border != $border-disabled) {
            border-color: $border-disabled;
        }
    }

}



