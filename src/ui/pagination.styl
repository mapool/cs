@import "../variable/pagination.styl";
@import "../mixin/pagination.styl";

+prefix-classes($ui-prefix)

    .pagination

        pagination()

        selector-item = '> a'
        selector-button = '> .item'

        ui-size-variant(
            has-font: true,
            has-margin-horizontal: true,
            selector-append: selector-item
        )

        ui-size-variant(
            has-line-height: true,
            has-padding: true,
            selector-append: selector-button
        )

        ui-brand-variant(
            reversed: true,
            has-hover: true,
            has-active: true,
            has-checked: true,
            has-disabled: true,
            selector-append: selector-button
        )

        ui-brand-variant(
            reversed: true,
            has-border: true,
            has-color: true,
            has-bg: true,
            selector-append: selector-button,
            selector-child: $selector-active
        )

        {selector-item}
            pagination-item()

        {selector-button}
            pagination-button()

