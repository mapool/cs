 * @file Label
 * @author musicode
 */

label-reset()

    a&
        ui-set('color', $brand-text)
        text-decoration none

    button&
        outline 0



label-size(size)

    ui-set('font-size', size['font'])
    ui-set('line-height', size['line-height'])
    ui-set('padding', size['padding-vertical'] size['padding-horizontal'])



label-brand(bg, color)

    ui-set('background-color', bg)
    ui-set('border-color', bg)
    ui-set('color', color)



ui-label()

    border 1px solid transparent
    display inline-block
    white-space nowrap

    label-reset()

    ui()

    ui-brand-variant(
        reversed: true,
        each: label-brand
    )

    ui-size-variant(
        each: @(size) {

            label-size(size)

            &{$selector-round} {
                ui-set('border-radius', size['round'])
            }

            &{$selector-radius} {
                ui-set('border-radius', size['radius'])
            }
        }
    )

    > {$selector-text}
        font inherit

    > {$selector-icon} + {$selector-text},
    > {$selector-text} + {$selector-icon} {
        ui-set('margin-left', $label-icon-gap)
    }


ui-labels()

    ui-collection(
        selector-item: $selector-label,
        each: @(size) {

            > {$selector-label} {
                label-size(size)
            }

            &{$selector-round} {
                > {$selector-label} {
                    ui-set('border-radius', size['round'])
                }
            }

            &{$selector-radius} {
                > {$selector-label} {
                    ui-set('border-radius', size['radius'])
                }
            }

        }
    )


ui-labels-tight()

    ui-collection-tight(
        selector-item: $selector-label
    )

    ui-collection-tight-side-radius(
        selector-item: $selector-label
    )
