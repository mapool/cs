$brand-bg = #FFF
$brand-bg-hover = #F9F9F9
$brand-bg-active = #F6F6F6
$brand-bg-checked = #F3F3F3
$brand-bg-disabled = #FCFCFC

$brand-text = #666
$brand-text-hover = #333
$brand-text-disabled = #C7C7C7

$brand-border = #DFDDDB
$brand-border-disabled = #DDD

$brand-link = #666
$brand-link-hover = #f90
$brand-link-disabled = #BBB

$brand-divider = #EEE

$brand-muted = #CCC
$brand-primary = #f90
$brand-secondary = #FFF
$brand-success = #6CB329
$brand-error = #f35924
$brand-info = #6187dc
$brand-warning = #f0ad4e
$brand-danger = #d9534f

$brand-hash = {
    primary: $brand-primary,
    secondary: $brand-secondary,
    success: $brand-success,
    error: $brand-error,
    info: $brand-info,
    warning: $brand-warning,
    danger: $brand-danger,
    muted: $brand-muted
}

$brand-hover-hash = {
    primary: darken($brand-primary, 4%),
    secondary: darken($brand-secondary, 4%),
    success: darken($brand-success, 4%),
    error: darken($brand-error, 4%),
    info: darken($brand-info, 4%),
    warning: darken($brand-warning, 4%),
    danger: darken($brand-danger, 4%),
    muted: darken($brand-muted, 4%)
}

$brand-active-hash = {
    primary: darken($brand-primary, 8%),
    secondary: darken($brand-secondary, 8%),
    success: darken($brand-success, 8%),
    error: darken($brand-error, 8%),
    info: darken($brand-info, 8%),
    warning: darken($brand-warning, 8%),
    danger: darken($brand-danger, 8%),
    muted: darken($brand-muted, 8%)
}

$brand-checked-hash = {
    primary: darken($brand-primary, 10%),
    secondary: darken($brand-secondary, 10%),
    success: darken($brand-success, 10%),
    error: darken($brand-error, 10%),
    info: darken($brand-info, 10%),
    warning: darken($brand-warning, 10%),
    danger: darken($brand-danger, 10%),
    muted: darken($brand-muted, 10%)
}

$brand-disabled-hash = {
    primary: lighten($brand-primary, 30%),
    secondary: lighten($brand-secondary, 30%),
    success: lighten($brand-success, 30%),
    error: lighten($brand-error, 30%),
    info: lighten($brand-info, 30%),
    warning: lighten($brand-warning, 30%),
    danger: lighten($brand-danger, 30%),
    muted: lighten($brand-muted, 30%)
}

$brand-reversed-hash = {
    primary: #FFF,
    secondary: $brand-text,
    success: #FFF,
    error: #FFF,
    info: #FFF,
    warning: #FFF,
    danger: #FFF,
    muted: #FFF
}

