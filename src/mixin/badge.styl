/**
 * @file Badge
 * @author musicode
 */

badge-reset()

    a&
        ui-set('color', $brand-text)
        text-decoration none

    button&
        border 0
        outline 0


badge-size(size)

    ui-set('font-size', size['font'])
    ui-set('line-height', size['line-height'])
    ui-set('padding', size['padding-vertical'] size['padding-horizontal'])
    ui-set('border-radius', size['round'])


badge-brand(bg, color)

    ui-set('background-color', bg)
    ui-set('color', color)


ui-badge()

    display inline-block
    text-align center
    white-space nowrap

    badge-reset()

    ui()

    ui-brand-variant(
        reversed: true,
        each: badge-brand
    )

    ui-size-variant(
        each: badge-size
    )



ui-badges()

    ui-collection(
        selector-item: $selector-badge,
        each: @(size) {
            > {$selector-badge} {
                badge-size(size)
            }
        }
    )

