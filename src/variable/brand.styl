$brand-bg = #FFFDFA
$brand-bg-hover = #FAF7F2
$brand-bg-active = #F8F2E9
$brand-bg-checked = #F8F2E9
$brand-bg-disabled = #F8F8F8

$brand-text = #605e58
$brand-text-hover = #333
$brand-text-disabled = #C7C7C7

$brand-border = #DFDDDB
$brand-border-disabled = #DDD

$brand-link = #666
$brand-link-hover = #333
$brand-link-disabled = #AAA

$brand-divider = #EBEBEB

$brand-muted = #CCC
$brand-primary = #f90
$brand-secondary = #FFF
$brand-success = #56b02a
$brand-error = #f95710
$brand-info = #6187dc
$brand-warning = #f0ad4e
$brand-danger = #d9534f

$brand-hash = {
    primary: $brand-primary,
    secondary: $brand-secondary,
    success: $brand-success,
    error: $brand-error,
    info: $brand-info,
    warning: $brand-warning,
    danger: $brand-danger,
    muted: $brand-muted
}

$brand-reversed-hash = {
    primary: #FFF,
    secondary: $brand-text,
    success: #FFF,
    error: #FFF,
    info: #FFF,
    warning: #FFF,
    danger: #FFF,
    muted: #FFF
}

