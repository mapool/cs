+prefix-classes($ui-prefix)

    html
        box-sizing border-box

    *,
    *:before,
    *:after
        box-sizing inherit

    // 隐藏 IE 10+ 输入框后面的 x
    input::-ms-clear
        display none

    body
        ui-set('background-color', $brand-bg)
        ui-set('color', $brand-text)
        ui-set('font', $size-base['font'] unquote('/') $size-base['line-height'] $font-family-text)

    h1,
    h2,
    h3,
    h4,
    h5,
    h6
        ui-set('font-family', $font-family-title)

    code
        ui-set('font-family', $font-family-code)

    ul&{$selector-unstyled},
    ul&{$selector-inline}
        list-reset()

    ul&{$selector-inline} > li
        display inline-block

    if $support-mouse
        {$selector-disabled}
            &,
            & > {$selector-icon} {
                ui-set('cursor', $cursor-disabled, true)
            }

    ui-brand-variant(
        each: @(color) {
            ui-set('color', color)
        }
    )

    ui-size-variant(
        each: @(size) {
            ui-set('font-size', size['font'])
        }
    )

    if $brand-border is a 'rgba'
        {$selector-bordered}
            border 1px solid $brand-border

    {$selector-fluid}
        ui-fluid()


