ui-pagination-button-brand(bg, color)


ui-pagination()

    ul&
        list-reset()

    color inherit

    ui()

    ui-collection(
        selector-item: $selector-pagination-item,
        each: @(size) {

            > {$selector-pagination-item} {
                ui-set('font-size', size['font'])
            }

        }
    )

    ui-brand-variant(
        reversed: true,
        each: @(bg, color, name) {
            > {$selector-button} {
                {$selector-hover} {
                    bg-hover = $brand-hover-hash[name]
                    button-hover(
                        bg: bg-hover,
                        border: darken(bg-hover, $button-border-darken),
                        color: color
                    )
                }
                {$selector-active} {
                    bg-active = $brand-active-hash[name]
                    button-active(
                        bg: bg-active,
                        border: darken(bg-active, $button-border-darken),
                        color: color
                    )
                }
                {$selector-checked} {
                    bg-checked = $brand-checked-hash[name]
                    button-active(
                        bg: bg-checked,
                        border: darken(bg-checked, $button-border-darken),
                        color: color
                    )
                }
            }
        }
    )


ui-pagination-tight()

    ui-collection-tight(
        selector-item: $selector-pagination-item,
        gap-item: -1px
    )

    > {$selector-button}
        {$selector-checked}
            position relative
            z-index $zindex-tiny



ui-pagination-item()

    display inline-block
    ui()

    ui-checked-cursor()


ui-pagination-button()

    button-brand(
        bg: $brand-bg,
        border: $brand-border,
        color: $brand-text
    )

    {$selector-disabled}
        button-disabled(
            bg: $brand-bg-disabled,
            border: $brand-border-disabled,
            color: $brand-text-disabled
        )



