@import "./list.styl";

pagination()

    font-size 0
    user-select none

    ui()

    ul&
        list-unstyled()


pagination-item()

    display inline-block

    ui()


pagination-button(checked-selector = '', disabled-selector = '')

    ui-style(
        border: $pagination-button-border,
        color: $pagination-button-color,
        bg: $pagination-button-bg
    );

    ui-clickable(
        checked-selector: checked-selector,
        disabled-selector: disabled-selector
    );


