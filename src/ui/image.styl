@import '../variable/image.styl'
@import '../mixin/image.styl'

+prefix-classes($ui-prefix)

    {$selector-image}

        display inline-block
        line-height 0
        text-align center
        overflow hidden

        > img
            display block
            width 100%
            height 100%

        ui()

        {$selector-fluid}
            ui-fluid()

        ui-size-variant(
            size-hash: $image-size-hash,
            each: @(size) {
                ui-set('width', size['width'])
                ui-set('height', size['height'])
            }
        )




        {$selector-image-link}&

            position relative

            &:after
                background-color #000
                content ' '
                position absolute
                top 0
                right 0
                bottom 0
                left 0

                ui-opacity(0)

            {$selector-hover}
                &:after
                    ui-opacity($image-link-hover-mask-opacity)




        {$selector-round}
            border-radius 50%

        {$selector-radius}
            ui-size-variant(
                size-hash: $image-size-hash,
                each: @(size) {
                    ui-set('border-radius', size['radius'])
                }
            )

