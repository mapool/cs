button-type($bg, $color, $border,
            $bg-disabled, $color-disabled, $border-disabled) {

    background-color: $bg;
    border: 1px solid $border;
    color: $color;

    &:disabled,
    &[disabled] {
        if ($bg != $bg-disabled) {
            background-color: $bg-disabled;
        }
        if ($color != $color-disabled) {
            color: $color-disabled;
        }
        if ($border != $border-disabled) {
            border-color: $border-disabled;
        }
    }
}

button-size($padding-vertical, $padding-horizontal, $font-size, $line-height, $border-radius = 0) {

    cursor: pointer;
    display: inline-block;
    font-size: $font-size;
    line-height: $line-height;
    padding: $padding-vertical $padding-horizontal;
    box-sizing: border-box;

    if ($border-radius > 0) {
        border-radius: $border-radius;
    }
}




