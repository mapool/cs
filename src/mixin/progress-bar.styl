/**
 * @file 进度条
 * @author zhujl
 */

progress() {

    ui-type(
        $progress-bg,
        $progress-color,
        null,
        $progress-shadow
    );

    ui-size('progress');

    overflow: hidden;

}

progress-bar() {

    height: 100%;
    text-align: center;

    if ($progress-bar-shadow) {
        box-shadow: $progress-bar-shadow;
    }

}

progress-bar-default() {
    ui-type(
        $progress-bar-default-bg
    );
}

progress-bar-primary() {
    ui-type(
        $progress-bar-primary-bg
    );
}

progress-bar-info() {
    ui-type(
        $progress-bar-info-bg
    );
}

progress-bar-success() {
    ui-type(
        $progress-bar-success-bg
    );
}

progress-bar-error() {
    ui-type(
        $progress-bar-error-bg
    );
}