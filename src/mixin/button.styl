button() {

    border: 1px solid transparent;
    display: inline-block;
    font-weight: $btn-font-weight;
    box-sizing: border-box;

    if ($support-mouse ia a 'boolean' && $support-mouse) {
        cursor: pointer;
        user-select: none;
    }

    &:disabled,
    &[disabled] {

        if ($support-mouse ia a 'boolean' && $support-mouse) {
            cursor: not-allowed;
        }

    }

    button& {
        outline: none;
        // safari 需要写这句
        margin: 0;
    }
}

button-size() {

    &:not({$size-tiny-selector}):not({$size-small-selector}):not({$size-large-selector}):not({$size-huge-selector}) {

        font-size: $font-size-base;
        line-height: $line-height-base;
        padding: $padding-vertical-base $padding-horizontal-base;

        if ($btn-border-radius-base is a 'unit') {
            border-radius: $btn-border-radius-base;
        }

    }

    &{$size-tiny-selector} {

        font-size: $font-size-tiny;
        line-height: $line-height-tiny;
        padding: $padding-vertical-tiny $padding-horizontal-tiny;

        if ($btn-border-radius-tiny is a 'unit') {
            border-radius: $btn-border-radius-tiny;
        }
    }

    &{$size-small-selector} {

        font-size: $font-size-small;
        line-height: $line-height-small;
        padding: $padding-vertical-small $padding-horizontal-small;

        if ($btn-border-radius-small is a 'unit') {
            border-radius: $btn-border-radius-small;
        }
    }

    &{$size-large-selector} {

        font-size: $font-size-large;
        line-height: $line-height-large;
        padding: $padding-vertical-large $padding-horizontal-large;

        if ($btn-border-radius-large is a 'unit') {
            border-radius: $btn-border-radius-large;
        }
    }

    &{$size-huge-selector} {

        font-size: $font-size-huge;
        line-height: $line-height-huge;
        padding: $padding-vertical-huge $padding-horizontal-huge;

        if ($btn-border-radius-huge is a 'unit') {
            border-radius: $btn-border-radius-huge;
        }

    }

}


button-type($bg, $color, $border, $shadow,
            $bg-hover, $color-hover, $border-hover, $shadow-hover,
            $bg-active, $color-active, $border-active, $shadow-active,
            $bg-disabled, $color-disabled, $border-disabled, $shadow-disabled) {

    if ($bg is a 'rgba') {
        background-color: $bg;
    }
    else {
        button&,
        input& {
            background-color: transparent;
        }
    }

    if ($border is a 'rgba') {
        border-color: $border;
    }

    if ($color is a 'rgba') {
        color: $color;
    }

    if ($shadow && $shadow != 'none') {
        box-shaodw: $shadow;
    }

    if ($support-mouse ia a 'boolean' && $support-mouse) {
        &:hover {
            if ($bg-hover is a 'rgba' && $bg != $bg-hover) {
                background-color: $bg-hover;
            }
            if ($color-hover is a 'rgba' && $color != $color-hover) {
                color: $color-hover;
            }
            if ($border-hover is a 'rgba' && $border != $border-hover) {
                border-color: $border-hover;
            }
            if ($shadow-hover && $shadow-hover != $shadow) {
                box-shaodw: $shadow-hover;
            }
        }
    }

    &:active {
        if ($bg-active is a 'rgba' && $bg != $bg-active) {
            background-color: $bg-active;
        }
        if ($color-active is a 'rgba' && $color != $color-active) {
            color: $color-active;
        }
        if ($border-active is a 'rgba' && $border != $border-active) {
            border-color: $border-active;
        }
        if ($shadow-active && $shadow-active != $shadow) {
            box-shaodw: $shadow-active;
        }
    }

    &:disabled,
    &[disabled] {

        if ($bg-disabled is a 'rgba' && $bg != $bg-disabled) {
            background-color: $bg-disabled;
        }
        if ($color-disabled is a 'rgba' && $color != $color-disabled) {
            color: $color-disabled;
        }
        if ($border-disabled is a 'rgba' && $border != $border-disabled) {
            border-color: $border-disabled;
        }
        if ($shadow-disabled && $shadow-disabled != $shadow) {
            box-shaodw: $shadow-disabled;
        }
    }

}


