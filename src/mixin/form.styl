form-label() {
    font-weight: $form-label-font-weight;
}

// 文本输入框
form-text() {

    background-color: $form-text-bg;
    border: 1px solid $form-text-border;
    color: $form-text-color;
    outline: none;
    padding-left: $padding-horizontal-base;
    padding-right: $padding-horizontal-base;

    if ($form-text-border-radius > 0) {
        border-radius: $form-text-border-radius;
    }

    &:hover {

        if ($form-text-bg-hover != $form-text-bg) {
            background-color: $form-text-bg-hover;
        }

        if ($form-text-border-hover != $form-text-border) {
            border-color: $form-text-border-hover;
        }

        if ($form-text-color-hover != $form-text-color) {
            color: $form-text-color-hover;
        }
    }

    &:focus {

        if ($form-text-bg-focus != $form-text-bg) {
            background-color: $form-text-bg-focus;
        }

        if ($form-text-border-focus != $form-text-border) {
            border-color: $form-text-border-focus;
        }

        if ($form-text-color-focus != $form-text-color) {
            color: $form-text-color-focus;
        }
    }

    &:disabled {

        cursor: not-allowed;

        // 禁用具有最高优先级，所以不能像前面那样 if
        // 否则无法覆盖样式
        background-color: $form-text-bg-disabled;
        border-color: $form-text-border-disabled;
        color: $form-text-color-disabled;

    }

    // 不能合并写
    &::-webkit-input-placeholder { /* WebKit browsers */
        color: $form-text-color-placeholder;
    }
    &:-moz-placeholder { /* Mozilla Firefox 4 to 18 */
        color: $form-text-color-placeholder;
    }
    &::-moz-placeholder { /* Mozilla Firefox 19+ */
        color: $form-text-color-placeholder;
    }
    &:-ms-input-placeholder { /* Internet Explorer 10+ */
        color: $form-text-color-placeholder;
    }
}


form-box() {

    display: inline-block;
    user-select: none;
    cursor: pointer;

    input {
        cursor: pointer;
        margin: 0 $form-box-gap 0 1px;
    }

}


