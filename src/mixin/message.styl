message() {

    if (typeof($message-default-border) == 'rgba') {
        border: 1px solid transparent;
    }

    ui-size('message');
}

message-default() {
    ui-type(
        $message-default-bg,
        $message-default-color,
        $message-default-border
    );
}

message-primary() {
    ui-type(
        $message-primary-bg,
        $message-primary-color,
        $message-primary-border
    );
}

message-info() {
    ui-type(
        $message-info-bg,
        $message-info-color,
        $message-info-border
    );
}

message-success() {
    ui-type(
        $message-success-bg,
        $message-success-color,
        $message-success-border
    );
}

message-error() {
    ui-type(
        $message-error-bg,
        $message-error-color,
        $message-error-border
    );
}