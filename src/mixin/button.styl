/**
 * @file Button
 * @author musicode
 */

button()

    border 1px solid transparent
    display inline-block
    text-align center
    white-space nowrap
    user-select none

    ui()

    if $support-mouse
        ui-set('cursor', $cursor-clickable)

    ui-brand-variant(
        reversed: true,
        each: @(bg, border, color) {
            ui-style(bg, border, color)
            ui-hover(bg, border, color)
            ui-active(bg, border, color)
            ui-disabled(bg, border, color)
        }
    )


buttons()

    font-size 0

    ui()


buttons-item()

    &:first-child ~ {$selector-buttons-item}
        margin-left -1px

    {$selector-hover}
        position relative
        z-index 1

