button-type($bg, $color, $border) {
    background-color: $bg;
    border: 1px solid $border;
    color: $color;
}

button-size($padding-vertical, $padding-horizontal, $font-size, $line-height, $border-radius = 0) {

    cursor: pointer;
    display: inline-block;
    font-size: $font-size;
    line-height: $line-height;
    padding: $padding-vertical $padding-horizontal;
    box-sizing: border-box;

    if ($border-radius > 0) {
        border-radius: $border-radius;
    }
}




btn-default() {
    button-type(
        $btn-default-bg,
        $btn-default-color,
        $btn-default-border
    );
}
