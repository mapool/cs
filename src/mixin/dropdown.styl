/**
 * @file Dropdown
 * @author musicode
 */

dropdown()

    display inline-block
    position relative

    ui()

    > {$selector-text},
    > {$selector-button}
        text-align left


dropdown-icon()

    float right

    ui()

    if $support-mouse
        ui-set('cursor', $cursor-clickable)


dropdown-menu()

    display none
    text-align left
    overflow-x hidden
    overflow-y auto

    position absolute
    left 0
    right 0

    ui()
    ui-set('margin-top', $dropdown-menu-gap)
    ui-set('background-color', $dropdown-menu-bg)

    if $dropdown-menu-border is a 'rgba'
        border 1px solid $dropdown-menu-border


dropdown-menu-item()

    user-select none

    ui()

    if $support-mouse
        ui-set('cursor', $cursor-clickable)

    {$selector-hover}
        ui-set('background-color', $dropdown-menu-item-bg-hover)

    {$selector-active}
        ui-set('background-color', $dropdown-menu-item-bg-active)

    {$selector-checked}
        ui-set('background-color', $dropdown-menu-item-bg-checked)

