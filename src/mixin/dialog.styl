dialog() {
    position: fixed;
    ui-type($type-hash['dialog']);
}

dialog-mask() {

    ui-type($type-hash['dialog-mask']);

    position: absolute;
    top: 0;
    left: 0;
}

dialog-close() {

    font-weight: $dialog-close-font-weight;
    text-align: center;

    position: absolute;
    top: $dialog-close-top;
    right: $dialog-close-right;

    if ($support-mouse == true) {
        cursor: pointer;
    }

    ui-size('dialog-close');
    ui-type($type-hash['dialog-close']);

}

dialog-header() {

    font-family: $dialog-header-font-family;
    font-weight: $dialog-header-font-weight;

    if ($support-mouse == true) {
        cursor: move;
        user-select: none;
    }

    ui-size('dialog-header');
    ui-type($type-hash['dialog-header']);

}

dialog-title() {
    display: inline-block;
}

dialog-body() {
    ui-size('dialog-body');
}