+prefix-classes($ui-prefix)

    {$selector-form-input}
        form-input()

        + {$selector-form-menu}
        > {$selector-form-menu}
            form-menu()
            ui-set('margin-top', $form-menu-gap)

        + ul{$selector-form-menu}
            list-reset()
            ui-set('margin-top', $form-menu-gap)

    {$selector-form-input-group}
        form-input-group()

    {$selector-form-inputs}
        form-inputs()
        &{$selector-tight}
            form-inputs-tight()

    {$selector-form-radio}
        form-radio()

    {$selector-form-radios}
        form-radios()
        &{$selector-tight}
            ui-collection-tight(
                selector-item: $selector-form-radio
            )
        &{$selector-justified}
            ui-justified(
                selector-item: $selector-form-radio
            )

    {$selector-form-checkbox}
        form-checkbox()

    {$selector-form-checkboxes}
        form-checkboxes()
        &{$selector-tight}
            ui-collection-tight(
                selector-item: $selector-form-checkbox
            )
        &{$selector-justified}
            ui-justified(
                selector-item: $selector-form-checkbox
            )

    {$selector-form}
        form()

        &{$selector-inline}
            > {$selector-form-group}
            > {$selector-block} > {$selector-form-group}
                form-group-inline()


        > {$selector-form-group}
        > {$selector-block} > {$selector-form-group}
            form-group()

            > {$selector-label}
                form-label()

            > {$selector-form-controls}
                form-controls()

        > {$selector-form-footer}
            form-footer()



