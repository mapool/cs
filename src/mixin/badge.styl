/**
 * @file Badge
 * @author musicode
 */

badge()

    display inline-block
    text-align center
    white-space nowrap
    border-radius 50%

    if $support-mouse
        ui-set('cursor', $cursor-text)

    ui()

    ui-brand-variant(
        reversed: true,
        each: @(bg, color) {
            ui-style(
                color: color,
                bg: bg
            )
        }
    )


