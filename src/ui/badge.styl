@import '../variable/badge.styl'
@import '../mixin/badge.styl'

+prefix-classes($ui-prefix)

    {$selector-badge}

        display inline-block
        text-align center
        white-space nowrap

        a&
            text-decoration none

        button&
            border 0
            outline 0

        ui()

        ui-brand-variant(
            reversed: true,
            each: @(bg, color) {
                ui-style(
                    color: color,
                    bg: bg
                )
            }
        )

        ui-size-variant(
            each: badge-size
        )

    {$selector-badges}

        ui-collection(
            each: @(size) {

                > {$selector-badge} {
                    badge-size(size)

                    + {$selector-badge} {
                        ui-set('margin-left', size['margin-horizontal'])
                    }

                }

            }
        )