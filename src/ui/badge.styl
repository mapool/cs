@import "../mixin/badge.styl";

.{$ui-prefix}badge

    badge();

    ui-base()

    &.tiny
        ui-tiny()

    &.small
        ui-small()

    &.large
        ui-large()

    &.huge
        ui-huge()

    &.primary
        ui-primary(false, true)

    &.secondary
        ui-secondary(false, true)

    &.success
        ui-success(false, true)

    &.error
        ui-error(false, true)

    &.info
        ui-info(false, true)

    &.warning
        ui-warning(false, true)

    &.danger
        ui-danger(false, true)

    ui-round-variant();
