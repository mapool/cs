@import "../variable/button.styl"
@import "../mixin/button.styl"

+prefix-classes($ui-prefix)

    .button

        button()

        ui-brand-variant(
            reversed: true,
            has-border: true,
            has-color: true,
            has-bg: true,
            has-hover: true,
            has-active: true,
            has-disabled: true
        )

        ui-size-variant(
            has-border: true,
            has-font: true,
            has-line-height: true,
            has-padding: true
        )

        {$selector-round}
            ui-size-variant(
                has-round: true
            )

        {$selector-radius}
            ui-size-variant(
                has-radius: true
            )

        {$selector-fluid}
            ui-fluid()


    .buttons

        buttons()

        > .button

            // 避免出现两个边框
            margin-left -1px

            {$selector-first-child}
                margin-left 0

            {$selector-hover}
                position relative
                z-index 1

            {$selector-round},
            {$selector-radius}
                border-radius 0

            ui-size-variant(
                has-left-round: true,
                selector-append: $selector-round,
                selector-child: $selector-first-child
            )

            ui-size-variant(
                has-right-round: true,
                selector-append: $selector-round,
                selector-child: $selector-last-child
            )

            ui-size-variant(
                has-left-radius: true,
                selector-append: $selector-radius,
                selector-child: $selector-first-child
            )

            ui-size-variant(
                has-right-radius: true,
                selector-append: $selector-radius,
                selector-child: $selector-last-child
            )



