dialog() {
    position: fixed;
}

dialog-mask() {
    background-color: $dialog-mask-bg;
    position: absolute;
    top: 0;
    left: 0;
}

dialog-close() {
    color: $dialog-close-color;
    font-size: $dialog-close-font-size;
    font-weight: $dialog-close-font-weight;
    width: $dialog-close-width;
    height: $dialog-close-height;
    line-height: $dialog-close-height;
    text-align: center;

    position: absolute;
    top: $dialog-close-top;
    right: $dialog-close-right;

    if ($support-mouse == true) {
        cursor: pointer;

        if (typeof($dialog-close-color-hover) == 'rgba' && $dialog-close-color-hover != $dialog-close-color) {
            &:hover {
                color: $dialog-close-color-hover;
            }
        }
    }
}

dialog-header() {
    background-color: $dialog-header-bg;
    color: $dialog-header-color;
    font-size: $dialog-header-font-size;
    font-family: $dialog-header-font-family;
    font-weight: $dialog-header-font-weight;
    padding: $dialog-header-padding-vertical $dialog-header-padding-horizontal;

    if ($support-mouse == true) {
        cursor: move;
        user-select: none;
    }
}

dialog-title() {
    display: inline-block;
}

dialog-body() {
    background-color: $dialog-body-bg;
    padding: $dialog-body-padding-vertical $dialog-body-padding-horizontal;
}