@import "../variable/pagination.styl";
@import "../mixin/pagination.styl";

.{$ui-prefix}pagination

    pagination()

    item-selector = '> a'
    button-selector = '> .' + $ui-prefix + 'item'

    ui-size-variant(
        has-font: true,
        has-margin-horizontal: true,
        append: item-selector
    )

    ui-size-variant(
        has-line-height: true,
        has-padding: true,
        append: button-selector
    )

    ui-brand-variant(
        has-border: true,
        has-bg: true,
        append: button-selector + '.active'
    )

    {item-selector}
        pagination-item()

    {button-selector}
        pagination-button(
            checked-selector: '.active',
            disabled-selector: '.disabled'
        )

