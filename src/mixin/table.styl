table() {

    width: 100%;
    box-sizing: border-box;

    thead {
        background-color: $table-header-bg;
        color: $table-header-color;
    }

    th {
        padding: $table-header-cell-padding-vertical
                 $table-header-cell-padding-horizontal;
        text-align: $table-header-align;
    }

    tbody {

        if ($table-body-odd-row-bg is a 'rgba' && $table-body-odd-row-bg == $table-body-even-row-bg) {
            background-color: $table-body-odd-row-bg;
        }
        else {
            if ($table-body-odd-row-bg is a 'rgba') {
                tr:nth-chilid(2n+1) {
                    background-color: $table-body-odd-row-bg;
                }
            }
            if ($table-body-even-row-bg is a 'rgba') {
                tr:nth-chilid(2n) {
                    background-color: $table-body-even-row-bg;
                }
            }
        }

        if ($table-body-color is a 'rgba') {
            color: $table-body-color;
        }

        if ($table-body-row-border is a 'rgba') {
            tr {
                border-bottom: 1px solid $table-body-row-border;
            }
        }
    }

    td {
        padding: $table-body-cell-padding-vertical
                 $table-body-cell-padding-horizontal;
        text-align: $table-body-align;
    }

}