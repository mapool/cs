/**
 * @file Tabs
 * @author musicode
 */


tab-size(size)

    ui-set('font-size', size['font'])
    ui-set('line-height', size['line-height'])
    ui-set('padding', size['padding-vertical'] size['padding-horizontal'])


tab-brand(bg, color)

    {$selector-hover}
        ui-transition('background-color, border-color, color')
        ui-set('background-color', lighten(bg, 5%))
        ui-set('border-color', lighten(bg, 5%))
        ui-set('color', color)

    {$selector-active}
        ui-set('background-color', bg)
        ui-set('border-color', bg)
        ui-set('color', color)
        ui-set('box-shadow', $button-box-shadow-active)

    {$selector-checked}
        ui-set('background-color', darken(bg, 10%))
        ui-set('border-color', darken(bg, 10%))
        ui-set('color', color)
        ui-set('box-shadow', none)


ui-tab()

    display inline-block
    position relative
    text-align center
    white-space nowrap

    ui()

    if $support-mouse
        ui-set('cursor', $cursor-clickable)
        ui-disabled-cursor()


ui-tabs()

    color inherit
    user-select none

    ui()
    ui-fluid()

    ui-collection(
        selector-item: $selector-tab,
        each: @(size) {
            > {$selector-tab} {
                tab-size(size)
            }
        }
    )

    ui-brand-variant(
        reversed: true,
        each: @(bg, color) {
            > {$selector-tab} {
                tab-brand(bg, color)
            }
        }
    )