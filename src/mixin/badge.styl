badge() {

    display: inline-block;

    if ($badge-font-weight != 'normal') {
        font-weight: $badge-font-weight;
    }

    min-width: $badge-min-width;
    text-align: center;

    ui-size('badge');
}

badge-default() {
    ui-type($type-hash['badge-default']);
}

badge-primary() {
    ui-type($type-hash['badge-primary']);
}

badge-info() {
    ui-type($type-hash['badge-info']);
}

badge-success() {
    ui-type($type-hash['badge-success']);
}

badge-error() {
    ui-type($type-hash['badge-error']);
}
