@import '../variable/typography.styl'

+prefix-classes($ui-prefix)

    html
        box-sizing border-box

    *,
    *:before,
    *:after
        box-sizing inherit

    // 隐藏 IE 10+ 输入框后面的 x
    input::-ms-clear
        display none

    body
        ui-set('background-color', $bg-color)
        ui-set('color', $text-color)
        ui-set('font', $size-base['font'] unquote('/') $size-base['line-height'] $font-family-title)

    ui-variant(
        hash: $text-color-hash,
        each: @(color, name) {
            ui-set('color', color)
        }
    )

    {$selector-link}
        ui-link(
            color: $link-color,
            has-hover: true
        )
