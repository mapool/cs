/**
 * @file Dialog
 * @author musicode
 */

dialog()

    position fixed
    text-align left

    ui-set('background-color', $dialog-bg)
    ui-set('border-radius', $dialog-radius)

    if $dialog-border is a 'rgba'
        border 1px solid $dialog-border

    ui()


dialog-header()

    user-select none

    ui()

    ui-set('padding', $dialog-header-padding-vertical $dialog-padding-horizontal)

    if $dialog-header-border is a 'rgba'
        border-bottom 1px solid $dialog-header-border


dialog-title()

    display inline-block

    ui()
    ui-set('font-size', $dialog-title-font-size)
    ui-set('font-weight', $dialog-title-font-weight)


dialog-close()

    position absolute
    top $dialog-close-top
    right $dialog-padding-horizontal

    ui()
    ui-set('font-size', $dialog-close-font-size)

    if $support-mouse
        ui-set('cursor', $cursor-clickable)


dialog-body()

    ui()
    ui-set('padding', $dialog-body-padding-vertical $dialog-padding-horizontal)


dialog-footer()

    font-size 0
    text-align right

    ui()
    ui-set('padding', $dialog-footer-padding-vertical $dialog-padding-horizontal)

    if $dialog-footer-border is a 'rgba'
        border-top 1px solid $dialog-footer-border

    {$selector-button} + {$selector-button}
        ui-set('margin-left', $dialog-footer-button-gap)


