+prefix-classes($ui-prefix)

    {$selector-message}
        ui-message()

    {$selector-messages}
        ui-messages()

        &{$selector-tight}
            ui-messages-tight()

        &{$selector-justified}
            ui-justified(
                selector-item: $selector-message
            )
