@import "../variable/progress.styl"
@import "../mixin/progress.styl"

+prefix-classes($ui-prefix)

    .progress

        progress()

        selector-meter = ' > .meter';

        ui-brand-variant(
            reversed: true,
            selector-child: selector-meter,
            each: @(bg = null) {
                background-color bg
            }
        )

        ui-size-variant(
            selector-child: selector-meter,
            each: @(size) {
                font-size size['font'];
                line-height size['line-height'];
                padding: size['padding-vertical'] size['padding-horizontal'];
            }
        )

        {$selector-round}
            ui-size-variant(
                each: @(size) {
                    border-radius size['round']
                }
            )
            ui-size-variant(
                selector-child: selector-meter,
                each: @(size) {
                    border-radius size['round']
                }
            )

        {$selector-radius}
            ui-size-variant(
                each: @(size) {
                    border-radius size['radius']
                }
            )
            ui-size-variant(
                selector-child: selector-meter,
                each: @(size) {
                    border-radius size['radius']
                }
            )

        {selector-meter}
            progress-meter()

