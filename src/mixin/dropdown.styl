 * @file Dropdown
 * @author musicode
 */

dropdown()

    display inline-block
    position relative
    text-align left

    ui()


dropdown-menu()

    display none
    overflow-x hidden
    overflow-y auto

    position absolute
    left 0
    right 0


dropdown-menu-item()

    if $support-mouse
        ui-set('cursor', $cursor-clickable)



