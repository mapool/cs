// 文本输入框
form-text() {

    background-color: $input-bg;
    border: 1px solid $input-border;
    color: $input-color;
    outline: none;

    if ($input-border-radius > 0) {
        border-radius: $input-border-radius;
    }

    &:foucs {

        if ($input-bg-focus != $input-bg) {
            background-color: $input-bg-focus;
        }

        if ($input-border-focus != $input-border) {
            border-color: $input-border-focus;
        }

        if ($input-color-focus != $input-color) {
            color: $input-color-focus;
        }
    }

    &:disabled {

        cursor: not-allowed;

        if ($input-bg-disabled != $input-bg) {
            background-color: $input-bg-disabled;
        }

        if ($input-border-disabled != $input-border) {
            border-color: $input-border-disabled;
        }

        if ($input-color-disabled != $input-color) {
            color: $input-color-disabled;
        }
    }

    // 不能合并写
    &::-webkit-input-placeholder { /* WebKit browsers */
        color: $input-color-placeholder;
    }
    &:-moz-placeholder { /* Mozilla Firefox 4 to 18 */
        color: $input-color-placeholder;
    }
    &::-moz-placeholder { /* Mozilla Firefox 19+ */
        color: $input-color-placeholder;
    }
    &:-ms-input-placeholder { /* Internet Explorer 10+ */
        color: $input-color-placeholder;
    }
}



