$type-hash['table-header'] = {

    'default': {
        'bg': #edf3fd,
        'color': $gray-darker
    }
};

$type-hash['table-body'] = {
    'default': {
        'color': $text-color
    }
};

$size-hash['table-header-cell'] = {

    'base': {
        'padding-vertical': 10px,
        'padding-horizontal': 10px,
        'font-size': $font-size-base,
        'line-height': $line-height-base
    }
};

$size-hash['table-body-cell'] = {

    'base': {
        'padding-vertical': 10px,
        'padding-horizontal': 10px,
        'font-size': $font-size-base,
        'line-height': $line-height-base
    }
};

$table-header-align = center;
$table-body-align = center;

$table-body-odd-row-bg = #FFF;
$table-body-even-row-bg = #FFF;
$table-body-row-border = $gray-light;
