/**
 * ================================================
 * form-group
 * ================================================
 */
$form-group-gap = 0;
$form-group-border = none;

/**
 * ================================================
 * form-label
 * ================================================
 */
$form-label-font-weight = normal;
$form-label-gap = 5px;

$form-text-height-base = 36px;
$form-text-height-tiny = 24px;
$form-text-height-small = 28px;
$form-text-height-large = 40px;
$form-text-height-huge = 46px;


/**
 * ================================================
 * form-box
 * ================================================
 */
$form-box-gap = 5px;


/**
 * ================================================
 * form-action
 * ================================================
 */
$form-action-gap = 20px;


/**
 * ================================================
 * form-inline
 * ================================================
 */
$form-inline-gap = 5px;

/**
 * ================================================
 * form-text
 * ================================================
 */
$form-text-border-radius = $border-radius-base;
$form-text-color-placeholder = #CCC;

// default
$form-text-bg = #FFF;
$form-text-border = #CCC;
$form-text-color = $text-color;

// hover
$form-text-bg-hover = #FFF;
$form-text-border-hover = $brand-primary;
$form-text-color-hover = $text-color;

// focus
$form-text-bg-focus = #FFF;
$form-text-border-focus = $brand-primary;
$form-text-color-focus = $text-color;

// disabled
$form-text-bg-disabled = $gray-lighter;
$form-text-border-disabled = $gray-light;
$form-text-color-disabled = $gray-light;