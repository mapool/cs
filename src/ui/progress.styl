@import "../variable/progress.styl"
@import "../mixin/progress.styl"

+prefix-classes($ui-prefix)

    .progress

        progress()

        selector-meter = ' > .meter';

        ui-brand-variant(
            reversed: true,
            has-bg: true,
            selector-child: selector-meter
        )

        ui-size-variant(
            has-font: true,
            has-padding: true,
            has-line-height: true,
            selector-child: selector-meter
        )

        {$selector-round}
            ui-size-variant(
                has-round: true
            )
            ui-size-variant(
                has-round: true,
                selector-child: selector-meter
            )

        {$selector-radius}
            ui-size-variant(
                has-radius: true
            )
            ui-size-variant(
                has-radius: true,
                selector-child: selector-meter
            )

        {selector-meter}
            progress-meter()

