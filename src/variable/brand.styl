$brand-bg = #FFFDFA
$brand-bg-hover = #FAF7F2
$brand-bg-active = #F8F2E9
$brand-bg-checked = #F8F2E9
$brand-bg-disabled = #F8F8F8

$brand-text = #605e58
$brand-text-hover = #333
$brand-text-disabled = #C7C7C7

$brand-border = #DFDDDB
$brand-border-disabled = #DDD

$brand-link = #666
$brand-link-hover = #333
$brand-link-disabled = #AAA

$brand-divider = #EBEBEB

$brand-muted = #CCC
$brand-primary = #f90
$brand-secondary = #FFF
$brand-success = #56b02a
$brand-error = #f95710
$brand-info = #6187dc
$brand-warning = #f0ad4e
$brand-danger = #d9534f

$brand-hash = {
    primary: $brand-primary,
    secondary: $brand-secondary,
    success: $brand-success,
    error: $brand-error,
    info: $brand-info,
    warning: $brand-warning,
    danger: $brand-danger,
    muted: $brand-muted
}

$brand-hover-hash = {
    primary: darken($brand-primary, 5%),
    secondary: darken($brand-secondary, 5%),
    success: darken($brand-success, 5%),
    error: darken($brand-error, 5%),
    info: darken($brand-info, 5%),
    warning: darken($brand-warning, 5%),
    danger: darken($brand-danger, 5%),
    muted: darken($brand-muted, 5%)
}

$brand-active-hash = {
    primary: darken($brand-primary, 10%),
    secondary: darken($brand-secondary, 10%),
    success: darken($brand-success, 10%),
    error: darken($brand-error, 10%),
    info: darken($brand-info, 10%),
    warning: darken($brand-warning, 10%),
    danger: darken($brand-danger, 10%),
    muted: darken($brand-muted, 10%)
}

$brand-disabled-hash = {
    primary: lighten($brand-primary, 30%),
    secondary: lighten($brand-secondary, 30%),
    success: lighten($brand-success, 30%),
    error: lighten($brand-error, 30%),
    info: lighten($brand-info, 30%),
    warning: lighten($brand-warning, 30%),
    danger: lighten($brand-danger, 30%),
    muted: lighten($brand-muted, 30%)
}

$brand-reversed-hash = {
    primary: #FFF,
    secondary: $brand-text,
    success: #FFF,
    error: #FFF,
    info: #FFF,
    warning: #FFF,
    danger: #FFF,
    muted: #FFF
}

