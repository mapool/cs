@import "../variable/label.styl"
@import "../mixin/label.styl"

+prefix-classes($ui-prefix)

    .label

        label()

        ui-brand-variant(
            reversed: true,
            has-bg: true,
            has-color: true
        )

        ui-size-variant(
            has-font: true,
            has-line-height: true,
            has-padding: true
        )

        {$selector-round}
            ui-size-variant(
                has-round: true
            )

        {$selector-radius}
            ui-size-variant(
                has-radius: true
            )


