@import "../variable/label.styl"
@import "../mixin/label.styl"

+prefix-classes($ui-prefix)

    .label

        label()

        ui-brand-variant(
            reversed: true,
            each: @(bg = null, border = null, color = null) {
                background-color bg
                color color
            }
        )

        ui-size-variant(
            each: @(size) {
                // 下面的 : ; 如果不加会报错....
                font-size size['font'];
                line-height size['line-height'];
                padding: size['padding-vertical'] size['padding-horizontal']
            }
        )

        {$selector-round}
            ui-size-variant(
                each: @(size) {
                    border-radius size['round']
                }
            )

        {$selector-radius}
            ui-size-variant(
                each: @(size) {
                    border-radius size['radius']
                }
            )


