/**
 * $file 表单元素
 * $author zhujl
 */

$size-hash.form = {

    'padding-horizontal-base': 0px,

    'padding-horizontal-tiny': 0px,

    'padding-horizontal-small': 0px,

    'padding-horizontal-large': 0px,

    'padding-horizontal-huge': 0px
};

/**
 * ================================================
 * form-group
 * ================================================
 */
$form-group-gap = 10px;
$form-group-border = none;

/**
 * ================================================
 * form-label
 * ================================================
 */
$form-label-font-weight = normal;
$form-label-gap = 5px;


/**
 * ================================================
 * form-box
 * ================================================
 */
$form-box-inner-gap = 5px;
$form-box-gap = 10px;


/**
 * ================================================
 * form-action
 * ================================================
 */
$form-action-gap = 20px;


/**
 * ================================================
 * form-inline
 * ================================================
 */
$form-inline-gap = 5px;

/**
 * ================================================
 * form-text
 * ================================================
 */
$form-text-border-radius = $border-radius-base;
$form-text-color-placeholder = #CCC;

// default
$form-text-bg = #FFF;
$form-text-border = #CCC;
$form-text-color = $text-color;

// hover
$form-text-bg-hover = #FFF;
$form-text-border-hover = $brand-primary;
$form-text-color-hover = $text-color;

// focus
$form-text-bg-focus = #FFF;
$form-text-border-focus = $brand-primary;
$form-text-color-focus = $text-color;

// disabled
$form-text-bg-disabled = $gray-lighter;
$form-text-border-disabled = $gray-light;
$form-text-color-disabled = $gray-light;

/**
 * ================================================
 * input-group-addon
 * ================================================
 */
$size-hash['input-group-addon'] = {
    'padding-vertical': 5px,
    'padding-horizontal': 8px
};

$input-group-addon-bg = #EFEFEF;
$input-group-addon-color = $gray-darker;
$input-group-addon-border = $form-text-border;