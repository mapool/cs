@import '../variable/form.styl'
@import '../mixin/form.styl'


+prefix-classes($ui-prefix)

    {$selector-form-input}
        form-input()

    {$selector-form-radio}
        form-radio()

    {$selector-form-checkbox}
        form-checkbox()

    {$selector-form}
        form()

        > {$selector-form-group}
            form-group()

            > {$selector-form-controls}
                form-controls()


