@import "../variable/typography.styl"

+prefix-classes($ui-prefix)

    html
        box-sizing border-box

    *,
    *:before,
    *:after
        box-sizing inherit

    body
        background-color $bg-color
        color $text-color
        font-size $size-base['font-size'];
        font-family $font-family-title;
        line-height $size-base['line-height']

    .link
        ui-link(
            color: $link-color,
            has-hover: true
        )
