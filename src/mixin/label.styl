 * @author musicode
 */

label()

    border 1px solid transparent
    display inline-block
    text-align center
    white-space nowrap

    if $support-mouse
        ui-set('cursor', $cursor-text)

    ui()

    ui-brand-variant(
        reversed: true,
        each: @(bg, color) {
            ui-style(bg, bg, color)
        }
    )

