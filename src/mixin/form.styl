form-control-size($padding-vertical, $font-size, $line-height, $has-border = false) {

    $padding-vertical = $has-border ? $padding-vertical : $padding-vertical + 1;

    font-size: $font-size;
    line-height: $line-height;
    padding-top: $padding-vertical;
    padding-bottom: $padding-vertical;
    box-sizing: border-box;
}

form-control-base($has-border = false) {
    form-control-size(
        $padding-vertical-base,
        $font-size-base,
        $line-height-base,
        $has-border
    );
}

form-control-tiny($has-border = false) {
    form-control-size(
        $padding-vertical-tiny,
        $font-size-tiny,
        $line-height-tiny,
        $has-border
    );
}

form-control-small($has-border = false) {
    form-control-size(
        $padding-vertical-small,
        $font-size-small,
        $line-height-small,
        $has-border
