 * @author musicode
 */

dialog-brand(bg, color)

    > {$selector-dialog-header}
        border-bottom 0
        margin-left -1px
        margin-right -1px
        margin-top -1px

        &
            ui-set('background-color', bg)
            ui-set('color', color)


ui-dialog()

    color inherit
    position fixed
    text-align left

    if $brand-border is a 'rgba'
        border 1px solid $brand-border

    ui()

    ui-set('background-color', $brand-bg)
    ui-set('min-width', $dialog-min-width)
    ui-set('border-radius', $dialog-radius)
    ui-set('box-shadow', $dialog-box-shadow)

    ui-brand-variant(
        reversed: true,
        each: dialog-brand
    )


ui-dialog-draggable()

    > {$selector-dialog-header}
        ui-set('cursor', $cursor-move)


ui-dialog-header()

    user-select none

    ui()

    ui-set('padding', $dialog-header-padding-vertical $dialog-padding-horizontal)
    ui-set('border-top-left-radius', $dialog-radius)
    ui-set('border-top-right-radius', $dialog-radius)

    if $brand-divider is a 'rgba'
        border-bottom 1px solid $brand-divider


ui-dialog-title()

    display inline-block

    if $support-mouse
        ui-set('cursor', $cursor-text)

    ui()
    ui-set('font-size', $dialog-title-font-size)



ui-dialog-close()

    position absolute
    ui-set('top', $dialog-close-top)
    ui-set('right', $dialog-padding-horizontal)

    ui()
    ui-set('font-size', $dialog-close-font-size)

    if $support-mouse
        ui-set('cursor', $cursor-clickable)



ui-dialog-body()

    ui()
    ui-set('padding', $dialog-body-padding-vertical $dialog-padding-horizontal)



ui-dialog-footer()

    text-align right

    ui()
    ui-set('padding', $dialog-footer-padding-vertical $dialog-padding-horizontal)

    if $brand-divider is a 'rgba'
        border-top 1px solid $brand-divider


