/**
 * ==============================================================
 * default
 * ==============================================================
 */
$btn-default-bg = #FFF;
$btn-default-border = $gray-light;
$btn-default-color = $text-color;
$btn-default-shadow = 0 0 3px rgba(0,0,0,1);

$btn-default-bg-hover = darken($btn-default-bg, 5%);
$btn-default-border-hover = darken($btn-default-border, 5%);
$btn-default-color-hover = $btn-default-color;
$btn-default-shadow-hover = 0 0 3px rgba(0,0,0,1);

$btn-default-bg-active = darken($btn-default-bg, 10%);
$btn-default-border-active = darken($btn-default-border, 10%);
$btn-default-color-active = $btn-default-color;
$btn-default-shadow-active = inset 0 3px 5px rgba(0,0,0,.125);

$btn-default-bg-disabled = #DDD;
$btn-default-border-disabled = #BBB;
$btn-default-color-disabled = $text-color;
$btn-default-shadow-disabled = none;

