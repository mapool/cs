@import '../variable/dropdown.styl'
@import '../mixin/dropdown.styl'

+prefix-classes($ui-prefix)

    {$selector-dropdown}

        dropdown()

        > {$selector-dropdown-menu}
            dropdown-menu()

        &.open {
            .caret {
               dropdown-caret-top();
            }
            .dropdown-menu {
                display: block;
            }
        }


    .dropdown-menu {

        dropdown-menu();

        li {
            dropdown-menu-item();
        }
    }
