@import "../variable/message.styl";
@import "../mixin/message.styl";

+prefix-classes($ui-prefix)

    .message

        message()

        ui-brand-variant(
            reversed: true,
            has-border: true,
            has-color: true,
            has-bg: true,
            level: 'lighter'
        )

        ui-size-variant(
            has-border: true,
            has-font: true,
            has-line-height: true,
            has-padding: true
        )

        {$selector-round}
            ui-size-variant(
                has-round: true
            )

        {$selector-radius}
            ui-size-variant(
                has-radius: true
            )