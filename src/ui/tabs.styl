@import '../variable/tabs.styl'
@import '../mixin/tabs.styl'

+prefix-classes($ui-prefix)

    .tabs

        tabs()

        selector-item = ' > .item'

        ui-brand-variant(
            reversed: true,
            selector-append: selector-item,
            each: @(bg, border, color) {
                ui-hover(bg, border, color)
                ui-active(bg, border, color)
            }
        )

        ui-brand-variant(
            reversed: true,
            selector-append: selector-item,
            selector-child: $selector-checked,
            each: @(bg, border, color) {
                background-color bg
                ui-checked(bg, border, color)
            }
        )

        ui-size-variant(
            selector-append: selector-item,
            each: @(size) {
                font-size size['font'];
                line-height size['line-height'];
                padding: size['padding-vertical'] size['padding-horizontal'];
            }
        )

        &.justified
            ui-justified(
                selector-item: selector-item
            )

        {selector-item}
            tabs-item()
