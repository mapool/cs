

ui()

    box-sizing border-box

    if @display == 'inline-block' or @display == 'inline'
        vertical-align baseline


ui-fluid()

    display block
    width 100%


ui-clickable(checked-selector = null,
             disabled-selector = null)

    if $support-mouse

        cursor: $cursor-clickable;

        if checked-selector
            {checked-selector}
                cursor: $cursor-checked

        if disabled-selector
            {disabled-selector}
                cursor: $cursor-disabled


ui-link(color, hover-selector)

    color color
    text-decoration none

    if $support-mouse and hover-selector
        {hover-selector}
            color darken(color, 10%)
            text-decoration underline


ui-style(bg = null, border = null, color = null)

    if bg is a 'rgba'
        background-color bg

    if border is a 'rgba'
        border 1px solid border

    if color is a 'rgba'
        color color


ui-brand(brand, level = 'base',
    has-border = false, has-color = false, has-bg = false,
    hover-selector = null, active-selector = null, disabled-selector = null)

    bg = brand[level]
    color = brand[level + '-reversed']

    if level == 'lighter'
        border = brand['light']
    else if level == 'light'
        border = brand['base']
    else if level == 'base'
        border = brand['dark']
    else if level == 'dark'
        border = brand['darker']

    if !has-bg
        color = bg
        bg = null

    if !has-color
        color = null

    if !has-border
        border = null

    ui-style(
        border: border,
        color: color,
        bg: bg,
    )

    if hover-selector
        {hover-selector}
            ui-style(
                border: darken(border, 6%),
                color: darken(color, 5%),
                bg: darken(bg, 6%),
            )

    if active-selector
        {active-selector}
            ui-style(
                border: darken(border, 14%),
                color: darken(color, 5%),
                bg: darken(bg, 14%),
            )

    if disabled-selector
        {disabled-selector}
            ui-style(
                border: lighten(border, 40%),
                color: lighten(color, 60%),
                bg: lighten(bg, 40%),
            )


ui-brand-variant(child-selector = '', level = 'base',
    has-border = false, has-color = false, has-bg = false,
    hover-selector = null, active-selector = null, disabled-selector = null)

    for brand in $brand-hash

        apply()
            ui-brand(
                brand: $brand-hash[brand],
                level: level,
                has-border: has-border,
                has-color: has-color,
                has-bg: has-bg,
                has-radius: has-radius,
                hover-selector: hover-selector,
                active-selector: active-selector,
                disabled-selector: disabled-selector
            )

        if brand
            &{'.' + brand}
                {child-selector}
                    apply()
        else
            {child-selector}
                apply()


ui-size(size,
    has-font, has-line-height,
    has-margin-vertical, has-margin-horizontal, has-padding, has-border,
    has-round = false,
    has-left-round = false,
    has-right-round = false,

    has-radius = false,
    has-left-radius = false,
    has-right-radius = false)

    if has-font
        font-size size['font-size']

    if has-line-height
        line-height size['line-height']

    if has-margin-horizontal
        margin-left size['margin-horizontal'];
        &:first-child
            margin-left 0


    if has-margin-vertical
        margin-top size['margin-vertical'];
        &:first-child
            margin-top 0

    if has-padding
        padding: size['padding-vertical'] size['padding-horizontal']

    if has-round
        border-radius size['round-size']

    if has-left-round
        border-top-left-radius size['round-size'];
        border-bottom-left-radius size['round-size'];

    if has-right-round
        border-top-right-radius size['round-size'];
        border-bottom-right-radius size['round-size'];

    if has-radius
        border-radius size['radius-size']

    if has-left-radius
        border-top-left-radius size['radius-size'];
        border-bottom-left-radius size['radius-size'];

    if has-right-radius
        border-top-right-radius size['radius-size'];
        border-bottom-right-radius size['radius-size'];


ui-size-variant(child-selector = '',
    has-font = false,
    has-line-height = false,
    has-margin-vertical = false,
    has-margin-horizontal = false,
    has-padding = false,
    has-border = false,

    has-round = false,
    has-left-round = false,
    has-right-round = false,

    has-radius = false,
    has-left-radius = false,
    has-right-radius = false)



    for size in $size-hash

        apply()
            ui-size(
                size: $size-hash[size],
                has-font: has-font,
                has-line-height: has-line-height,
                has-margin-vertical: has-margin-vertical,
                has-margin-horizontal: has-margin-horizontal,
                has-padding: has-padding,
                has-border: has-border,
                has-round: has-round,
                has-left-round: has-left-round,
                has-right-round: has-right-round,
                has-radius: has-radius,
                has-left-radius: has-left-radius,
                has-right-radius: has-right-radius
            )

        if size
            &{'.' + size}
                {child-selector}
                    apply()

        else
            {child-selector}
                apply()



