label-type($bg, $color, $border) {
    background-color: $bg;
    border: 1px solid $border;
    color: $color;
}

label-size($padding-vertical, $padding-horizontal, $font-size, $line-height, $border-radius = 0) {

    display: inline-block;
    font-size: $font-size;
    line-height: $line-height;
    padding: $padding-vertical $padding-horizontal;
    box-sizing: border-box;

    if ($border-radius > 0) {
        border-radius: $border-radius;
    }
}


label-default() {
    label-type(
        $label-default-bg,
        $label-default-color,
        $label-default-border
    );
}
